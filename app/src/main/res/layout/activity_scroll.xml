<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ScrollActivity">

    <ScrollView
            android:layout_width="356dp"
            android:layout_height="433dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.666"
            android:id="@+id/scrollView2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/goBack" app:layout_constraintVertical_bias="0.0">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:autoLink="web"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/display" android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary" android:textSize="18sp" android:lineSpacingExtra="8sp"/>
        </LinearLayout>
    </ScrollView>
    <Button
            android:text="Fuck go back"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:id="@+id/goBack" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>